import base64
import file_a
import sys
import subprocess
import os


from flask import Flask
app = Flask(__name__)

def re_write(new):
    with open("file_a.py", 'r') as file:
        new_file = []
        for line in file:
            if "var1" in line:
                new_file.append(line.split("var1")[0] + "var1 = " + new + "")
            else:
                new_file.append(line)
        with open("file_a.py", 'w') as file:
            for line in new_file:
                file.writelines(line)


@app.route('/')
